{
  "name": "plearn",
  "version": "0.0.1",
  "description": "Server that powers micropayment for task base activity",
  "main": "server.ts",
  "repository": "https://github.com/nully0x/plearns.git",
  "author": "Samson Olusegun",
  "license": "BSD",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "build": "npm run clean && tsc && npm run copy-files",
    "lint": "eslint .",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/languages/**/* dist/",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev --name update"
  },
  "dependencies": {
    "express": "^4.18.2",
    "tsc-watch": "^6.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.19",
    "@types/node": "^20.8.6",
    "typescript": "^5.2.2"
  }
}
